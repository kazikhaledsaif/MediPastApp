<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragments.AddDoctorFrag">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        card_view:cardBackgroundColor="#c4c3c3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                >
            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/doctorNameET"
                android:layout_weight="2"
                android:inputType="text">
            </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        card_view:cardBackgroundColor="#c4c3c3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                >
            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/doctorDetailsET"
                android:layout_weight="2"
                android:inputType="textMultiLine">
            </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        card_view:cardBackgroundColor="#c4c3c3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Appoinment"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                >
            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/doctorAppET"
                android:layout_weight="2"
                android:inputType="textMultiLine">
            </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        card_view:cardBackgroundColor="#c4c3c3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                >
            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/doctorPhoneET"
                android:layout_weight="2"
                android:inputType="number">
            </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        card_view:cardBackgroundColor="#c4c3c3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1"
                >
            </TextView>
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/doctorEmailET"
                android:layout_weight="2"
                android:inputType="textEmailAddress">
            </EditText>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

    </FrameLayout>