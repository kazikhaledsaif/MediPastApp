<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        card_view:cardBackgroundColor="#c4c3c3"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        card_view:contentPadding="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rowDoctorNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Name"
            />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Details"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1">
            </TextView>
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Details"
                android:id="@+id/rowDoctorDetailsTV"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="2">
            </TextView>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Appoinment"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1">
            </TextView>
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Details"
                android:id="@+id/rowDoctorApptTV"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="2">
            </TextView>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Phone"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1">
            </TextView>
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Details"
                android:id="@+id/rowDoctoPhoneTV"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="2">
            </TextView>

        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1">
            </TextView>
            <TextView android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Email"
                android:id="@+id/rowDoctoEmailTV"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="2">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>
